<ul class="pagination pagination-sm m-0 float-right">
    <li class="page-item {% if page == 1 %}disabled {% endif %} "><a class="page-link" href="{{ path(route, {'page': page - 1, 'tabpanel': tabPanel}) }}">&laquo;</a></li>
    {% for i in 1..pages %}
        <li class="page-item {% if page == i %}active{% endif %}"><a class="page-link" href="{{ path(route, {'page': i, 'tabpanel': tabPanel}) }}">{{i}}</a></li>
    {% endfor %}
    
    <li class="page-item {% if page == pages %}disabled{% endif %}"><a class="page-link" href="{{ path(route, {'page': page + 1, 'tabpanel': tabPanel}) }}">&raquo;</a></li>
</ul>